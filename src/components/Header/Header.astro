---
import { URL_LINKEDIN, URL_INSTAGRAM, URL_GITHUB } from "../../consts";
import Button, { ButtonVariants } from "../Button/Button.astro";
import Menu from "./Menu.astro";

export const internalLinks = [
  {
    link: "/experience",
    text: "Experience",
  },
];

export const externalLinks = [
  {
    link: URL_LINKEDIN,
    text: "LinkedIn",
  },
  {
    link: URL_INSTAGRAM,
    text: "Instagram",
  },
  {
    link: URL_GITHUB,
    text: "Github",
  },
];
---

<header>
  <div class="root">
    <div class="navBar">
      <Button href="/" className="homeLink" variant={ButtonVariants.Text}>
        <img class="logo" src="/logo/white.svg" alt="Alex Tuppen logo" />
        <span class="homeLinkText">Alex Tuppen</span>
      </Button>
      <div class="links">
        <div class="toolbarInternal">
          {
            internalLinks.map(({ link, text }) => (
              <Button href={link} variant={ButtonVariants.Text}>
                {text}
              </Button>
            ))
          }
        </div>
        <div class="toolbarExternal">
          {
            externalLinks.map(({ link, text }) => (
              <>
                <hr class="toolbarSeperator" />
                <Button
                  href={link}
                  variant={ButtonVariants.Text}
                  external={true}
                >
                  {text}
                </Button>
              </>
            ))
          }
        </div>
        <div class="buttonWrapper">
          <Menu />
        </div>
      </div>
    </div>
  </div>
</header>

<style lang="scss">
  @import "../../styles/_globals.scss";

  .root {
    @include elev-9();
    display: flex;
    padding: var(--padding-half);
    position: sticky;
    justify-content: center;
  }

  .navBar {
    width: 100%;
    max-width: var(--content-max-width);
    display: flex;
    justify-content: space-between;
  }

  .homeLink {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .homeLink:hover,
  .homeLink:active {
    text-decoration: underline;
    text-decoration-color: $primary;
    text-decoration-style: double;
  }

  .logo {
    --logo-height: 2rem;
    height: var(--logo-height);
    width: calc(var(--logo-height) / 1.5);
  }

  .homeLinkText {
    color: $text;
    font-family: "Montserrat", sans-serif;
    font-weight: 500;
    font-size: 2rem;
    line-height: 2rem;
    margin-left: var(--padding);
  }

  .links {
    display: flex;
    gap: var(--padding-half);
  }

  .toolbarInternal,
  .toolbarExternal {
    display: none;
    align-items: center;
    gap: var(--padding-half);
  }

  .toolbarSeperator {
    height: 100%;
    border-right-color: $text;
  }

  .buttonWrapper {
    display: block;
  }

  .menu {
    @include elev-8();
    margin-top: calc(var(--padding-half) + var(--border-width));
    padding: var(--padding-half);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--padding-half);
    border-bottom-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
    border-left: var(--border-width) solid $primary;
    border-bottom: var(--border-width) solid $primary;
    border-right: var(--border-width) solid $primary;
    transition: opacity 250ms ease-in-out, transform 250ms ease-in-out;
    opacity: 0;
    transform-origin: top center;
    transform: scaleY(0);
    [data-enter] & {
      opacity: 1;
      transform: scaleY(1);
    }
  }

  .menuInternal,
  .menuExternal {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--padding-half);
  }

  .menuSeperator {
    width: 100%;
    border-bottom-color: $text;
  }

  @include bp-small {
    .logo {
      --logo-height: 2.25rem;
    }

    .menuInternal {
      display: none;
    }

    .toolbarInternal {
      display: flex;
    }
  }

  @include bp-medium {
    .menuExternal {
      display: none;
    }

    .toolbarExternal {
      display: flex;
    }

    .buttonWrapper {
      display: none;
    }
  }

  @include bp-large {
    .logo {
      --logo-height: 2.5rem;
    }
  }
</style>
