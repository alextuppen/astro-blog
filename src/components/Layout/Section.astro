---
const { className } = Astro.props;
---

<section class:list={["section", className]}>
  <slot />
</section>

<style lang="scss">
  .section {
    max-width: var(--page-max-width);
    display: flex;
    flex-direction: column;
    gap: var(--padding-double);
    justify-content: center;
    align-items: center;
    text-align: center;
    margin: var(--padding-double) auto;
  }
</style>
