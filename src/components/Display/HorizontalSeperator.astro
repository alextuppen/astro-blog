---
interface Props {
  id?: string;
}

const { id } = Astro.props;
---

<hr id={id ? id : undefined} />

<style lang="scss">
  @import 'src/styles/_globals.scss';
  @import 'src/styles/typography.scss';

  hr {
    border: unset;
    border-bottom: 1px solid $primary;
    margin: 0 var(--paddingDouble);
  }
</style>
