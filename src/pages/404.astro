---
import { Root } from "../layouts";
import { Section } from "../components";
import { SITE_DESCRIPTION } from "../consts";

const code = "404";
const description = "Page not found";
---

<Root title={code} description={SITE_DESCRIPTION}>
  <Section>
    <div class="grid">
      <img
        width="160"
        height="240"
        src="/logo/white.svg"
        alt="Alex Tuppen logo"
        class="logo"
      />
      <div class="textWrapper">
        <h1 class="code">{code}</h1>
        <h2 class="text">{description}</h2>
      </div>
    </div>
  </Section>
</Root>

<style lang="scss">
  @import "src/styles/_globals.scss";
  @import "src/styles/typography.scss";

  .grid {
    display: grid;
    grid-template-areas:
      "logo"
      "text";
    justify-content: center;
    align-content: center;
    align-items: center;
    justify-items: center;
    gap: var(--paddingDouble);
    text-align: center;
    min-height: 100vh;
  }

  .logo {
    grid-area: "logo";
    --logo-width: 10rem;
    width: var(--logo-width);
    height: calc(var(--logo-width) * 1.5);
  }

  .textWrapper {
    grid-area: "text";
    display: flex;
    flex-direction: column;
  }

  .code {
    font-size: 5rem;
  }

  .text {
    margin: unset;
  }

  @include bp-small {
    .logo {
      --logo-width: 12rem;
    }

    .code {
      font-size: 6.5rem;
    }
  }

  @include bp-medium {
    .grid {
      grid-template-areas: "logo text";
    }

    .code {
      font-size: 7rem;
    }
  }

  @include bp-large {
    .logo {
      --logo-width: 14rem;
    }

    .code {
      font-size: 10rem;
    }
  }

  @include bp-xl {
    .logo {
      --logo-width: 16rem;
    }

    .code {
      font-size: 12rem;
    }
  }
</style>
